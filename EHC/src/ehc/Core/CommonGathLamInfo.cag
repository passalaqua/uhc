%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Common AG for Core BindingInfo gathering & propagation
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%[doesWhat doclatex
Gathering.

Hook(s):
\begin{itemize}
\item \verb|CodeAGItf.AGItf.howMergeBindingInfo|, how to merge binding info
\item \verb|CodeAGItf.AGItf.howUnionGathBindingInfo|, how to preprocess inherited binding info for further use down the AST, e.g. by union gathered binding info
\end{itemize}
%%]

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Gathering BindingInfo
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%[(8 codegen)
ATTR
  CModule CExpr
  CodeAGItf
    [ | | gathLamMp: LamMp ]

SEM CExpr
  | Let         lhs         .   gathLamMp 	=   @binds.bindLamMp `Map.union` @body.gathLamMp
  | * - Let Ann CaseAltFail
  				lhs         .   gathLamMp 	=   Map.empty
%%]

%%[(8 codegen)
ATTR AllBind [ | | bindLamMp USE {`lamMpUnionBindAspMp`} {Map.empty}: LamMp ]

%%]

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Combining BindingInfo for local (per module) use
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%[(8 codegen)
SEM CodeAGItf
  | AGItf       loc         .   gathLamMp   =   lamMpMergeInto @howMergeBindingInfo const @module.gathLamMp @lhs.lamMp -- lamMpUpdateWith @lhs.lamMp @module.gathLamMp
                module      .   lamMp       =   @howUnionGathBindingInfo @lhs.lamMp
%%]


